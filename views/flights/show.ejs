<%- include('../partials/header') %>

<table id="show-page">
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>Flight Number</th>
      <th>Depart</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= flight.airline %></td>
        <td><%= flight.airport %></td>
        <td><%= flight.flightNo %></td>
        <td><%= flight.departs %></td>
      </tr>
  </tbody>
  
</table>

<h2>Destinations:</h2>

<form method="POST"
 action="/destinations/flights/<%= flight._id %>">
  <label>Airport:
    <select name="airport">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="LAX">LAX</option>
      <option value="DEN">DEN</option>
      <option value="SAN">SAN</option>
    </select>
  </label><br>
  

  <label>Arrival:</label>
  <input type="datetime-local" required name="arrival">
</label><br><br>
<input type="submit"  value="Add Destination">


</form>
<br></br>
<table>
  <thead>
    <tr>
      <th>Airport</th>
      <th>Arrival</th>
    </tr>
  </thead>
  <tbody>
  <% for(let i = 0; i < flight.destination.length; i++){%>
    <tr>
      <td><%= flight.destination[i].airport%></td>
      <td><%= flight.destination[i].arrival%></td>
      <td><a href="/flights/<%= flight._id %>/tickets/new">Select</a></td>

    </tr>
    <% } %>
  </tbody>
</table>





<h3>Ticket</h3>

<table>
  <thead>
    <tr>
      <th>Seat</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <tr>
  <% for(let i = 0; i < tickets.length; i++){%>
    <td><%= tickets[i].seat%></td>
    <td><%= tickets[i].price%></td>
    </tr>
    <% } %>
  </tbody>
</table>


<%- include('../partials/footer') %>
